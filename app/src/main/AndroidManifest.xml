<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cn.xdc.scorerecord">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScoreRecord"
        android:usesCleartextTraffic="true"
        android:name=".MyApplication"
        tools:targetApi="31">

        <activity
            android:name=".activity.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Cyanea.Light.DarkActionBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.ResponseActivity"
            android:exported="true"
            android:theme="@style/Theme.Cyanea.Light.DarkActionBar"
            />

        <activity android:name=".activity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Cyanea.Light.DarkActionBar"
            />

        <activity android:name=".activity.AdminActivity"
            android:exported="true"
            android:theme="@style/Theme.Cyanea.Light.DarkActionBar"
            />
        <activity android:name=".activity.DetailActivity"
            android:exported="true"
            android:theme="@style/Theme.Cyanea.Light.DarkActionBar"
            />

    </application>

</manifest>